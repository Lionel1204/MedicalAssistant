<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MeasurementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/heart_rate_imgview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_rate" />

        <TextView
            android:id="@+id/mesaure_heart_rate_textview"
            style="@style/ShowInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="@string/measurement_heart_rate" />

        <TextView
            android:id="@+id/measurement_blood_pressure_textview"
            style="@style/ShowInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="@string/measurement_blood_pressure" />

        <Button
            android:id="@+id/btn_measurement_send_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:text="@string/measurement_send_to_doctor"
            android:textColor="@color/txt_white" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>