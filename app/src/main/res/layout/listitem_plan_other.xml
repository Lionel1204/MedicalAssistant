<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4px"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plan_other_item_title_textview"
            style="@style/HeartPlanTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/plan_other_item_details_textview"
            style="@style/HeartPlanContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_plan_item_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_selector"
        android:text="@string/plan_purchase"
        android:textColor="@color/txt_white"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_plan_item_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/btn_selector"
        android:text="@string/plan_pay"
        android:textColor="@color/txt_white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_plan_item_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/btn_gray_selector"
        android:text="@string/plan_cancel_pay"
        android:visibility="gone" />
</LinearLayout>